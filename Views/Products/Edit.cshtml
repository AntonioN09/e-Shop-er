<h2>Editare produs</h2>
<br />
<form method="post"
      action="/Products/Edit/@ViewBag.Product.Id">
    <label>Nume</label>
    <br />
    <input type="text" name="Name" value="@ViewBag.Product.Name" />
    <br /><br />
    <label>Descriere</label>
    <br />
    <input type="text" name="Description" value="@ViewBag.Product.Description" />
    <br /><br />
    <label>Price</label>
    <br />
    <input type="text" name="Price" value="@ViewBag.Product.Price" />
    <br />
    <button type="submit">Modifica produs</button>
</form>